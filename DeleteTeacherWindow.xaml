<Window x:Class="ClassTeacher_Assist.DeleteTeacherWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClassTeacher_Assist"
        d:DataContext="{d:DesignInstance Type=local:DeleteTeacherWindow}"
        mc:Ignorable="d"
        Title="DeleteTeacherWindow" Height="100" Width="350">
    <Grid Background="#B6B6B6" Height="85" Width="350">
        <Label FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Top" Content="Видалити свій акаунт"/>

        <Button x:Name="DeleteTeacherButton" Content="Видалити" Background="#B14242" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,30,0,0" Width="200" Height="30" FontSize="16" Cursor="Hand" Click="DeleteTeacherButton_Click"/>
    </Grid>
</Window>
